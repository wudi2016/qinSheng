	letter-spacing: 1px;
}

.works_title_number {
	color: gray;
	height: 36px;
	line-height: 36px;
	float: left;
	position: relative;
	left: -40px;
}



.works_des {
	width: 800px;
	height: 230px;
	margin: 0px 0px 0px 44px;
	font-size: 15px;
}

.works_des textarea {
	width: 420px;
	height: 190px;
	display: block;
	float: left;
	border: 1px solid silver;
	background: none;
	resize: none;
	font-family: 微软雅黑;
	padding: 10px 15px 0px 10px;
	border-bottom: none;
	letter-spacing: 1px;
}

.works_des_number {
	width: 425px;
	height: 30px;
	line-height: 30px;
	text-align: right;
	color: gray;
	font-size: 15px;
	border: 1px solid silver;
	border-top: none;
	float: left;
	padding-right: 20px;
}




.bottom_tip {
	width: 100%;
	height: 80px;
	line-height: 70px;
	text-align: center;
	font-size: 12px;
	color: gray;
}

