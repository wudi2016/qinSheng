.works_title {
	width: 800px;
	height: 80px;
	margin: 0px 0px 0px 44px;
	font-size: 15px;
}

.works_title span {
	color: red;
	position: relative;
	left: -3px;
}

.works_title input[type=text] {
	display: block;
	float: left;
	width: 390px;
	height: 36px;
