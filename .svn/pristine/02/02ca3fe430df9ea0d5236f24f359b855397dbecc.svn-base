.uploadComment {
	width: 1200px;
	height: auto;
	margin: 0 auto;
}

.uploadComment img { display: block; }

.crumbs {
	width: 100%;
	height: auto;
	font-size: 14px;
	cursor: pointer;
	padding: 15px 0px 10px;
	color: gray;
}
.crumbs a { color: gray; }
.crumbs a:hover { text-decoration: underline; }


.uploadComment_content {
	width: 100%;
	height: 542px;
	margin: 0 auto;
	background: white;
}


.add_video {
	width: 800px;
	height: 110px;
	margin: 0px 0px 0px 44px;
	color: rgb(153, 153, 153);
	font-size: 15px;
}

.add_video_top {
	width: 100%;
	height: 36px;
	line-height: 36px;
	text-align: center;
	color: black;
}

.add_video_top div {
	float: left;
	margin-right: 25px;
}

.add_video_top div:nth-child(2) {
	background: #1A9FEB;
	width: 180px;
	border-radius: 5px; -webkit-border-radius: 5px; -moz-border-radius: 5px;
	color: white;
	margin-right: 50px;
	cursor: pointer;
}

.fileButton {
	width: 200px;
	position: absolute;
	top: 0px;
	left: 0px;
	background: red;
	filter:alpha(opacity=50);
	-moz-opacity: 0.5;          
	-khtml-opacity: 0.5;       
	opacity: 0.5;        
}

.add_video_tip {
	margin-left: 85px;
	margin-top: 20px;
}

.add_video_success {
	
	margin-left: 137px;
	margin-top: 30px;
}



.add_video_loading {
	margin-left: 85px;
	margin-top: 25px;
	width: 417px;
	height: 45px;
}

.progress_bar {
	width: 415px;
	height: 10px;
	border: 1px solid silver;
}
.progress_bar div {
	background: #1A9FEB;
	height: 100%;
}

.progress_tip {
	float: left;
	margin-top: 8px;
	margin-left: 30px;
	font-size: 13px;
}

.progress_close {
	color: gray;
	float: right;
	margin-top: 15px;
	margin-right: 5px;
	font-size: 12px;
	cursor: pointer;
}
.progress_close:hover {
	color: #1A9FEB;
}





.suit_level {
	width: 853px;
	height: 150px;
	margin: 60px 0px 0px 44px;
	font-size: 15px;
}

.suit_level_title {
	float: left;
	height: 100%;
	width: 85px;
	line-height: 30px;
}

.suit_level_content {
	width: 768px;
	height: 92px;
	float: left;
}

.suit_level_content div {
	width: 118px;
	height: 34px;
	border: 1px solid silver;
	border-radius: 5px; -webkit-border-radius: 5px; -moz-border-radius: 5px;
	line-height: 34px;
	text-align: center;
	cursor: pointer;
	float: left;
	margin-right: 42px;
	margin-bottom: 20px;
}
.suit_level_content div:nth-child(5n) {
	margin: 0;
}
.checked {
	background-image: url(/home/image/lessonComment/commentDetail/upload_check.png);
}


.suit_level_tip {
	float: left;
	margin-top: 10px;
	font-size: 14px;
}




.content_bottom {
	width: 300px;
	height: 90px;
	margin: 30px auto 0;
}

.content_bottom_provision {
	width: 77%;
	height: 30px;
	line-height: 30px;
	color: rgb(134, 134, 134);
	text-align: center;
	margin: 0 auto;
	cursor: pointer;
}

.content_bottom_provision input[type=checkbox] {
	display: block;
	float: left;
	margin-top: 8px;
}

.content_bottom_provision a {
	display: block;
	float: right;
	color: #1A9FEB;
}
.content_bottom_provision a:hover {
	text-decoration: underline;
}


.content_bottom_button {
	width: 180px;
	height: 36px;
	line-height: 36px;
	text-align: center;
	margin: 15px auto 0;
	color: white;
	cursor: pointer;
}




